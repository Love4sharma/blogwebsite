generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  clerkUserId String     @unique
  name        String
  email       String     @unique
  imageUrl    String?
  articles    Articles[]
  comments    Comment[]
  likes       Likes[]
}

model Articles {
  id            String    @id @default(cuid())
  title         String
  content       String
  category      String
  featuredImage String
  author        User      @relation(fields: [authorId], references: [id])
  authorId      String
  comments      Comment[]
  likes         Likes[]
  createdAt     DateTime  @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  article   Articles @relation(fields: [articleId], references: [id])
  articleId String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
}

model Likes {
  id        String   @id @default(cuid())
  article   Articles @relation(fields: [articleId], references: [id])
  articleId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())

  @@unique([userId, articleId]) // user can like an article only once
}
